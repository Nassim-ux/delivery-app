<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:barrierMargin="100px"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewBackground1"
        android:layout_width="0dp"
        android:layout_height="167dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_img" />


    <TextView
        android:id="@+id/textViewPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="0"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewETATag1"
        app:layout_constraintTop_toBottomOf="@+id/textViewETATag1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewDAtag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="DA"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textViewPrice1"
        app:layout_constraintTop_toTopOf="@+id/textViewPrice1" />

    <TextView
        android:id="@+id/textViewCmdNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center|start"
        android:text="CmdNum"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCmdTag1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewCmdTag1"
        app:layout_constraintTop_toTopOf="@+id/textViewCmdTag1"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/textViewCmdTag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|start"
        android:text="Commande n°"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewPackIcon1"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackground1"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/textViewETATag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|start"
        android:text="Temps estimé :"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewCmdTag1"
        app:layout_constraintTop_toBottomOf="@+id/textViewCmdTag1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewDistTag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|start"
        android:text="- Distance :"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewETA1"
        app:layout_constraintTop_toBottomOf="@+id/textViewCmdTag1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewETA1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center|start"
        android:text="TIME"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewETATag1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewETATag1"
        app:layout_constraintTop_toTopOf="@+id/textViewETATag1" />

    <TextView
        android:id="@+id/textViewDist1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center|start"
        android:text="0 km"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewETATag1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewDistTag1"
        app:layout_constraintTop_toTopOf="@+id/textViewETATag1"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageViewPackIcon1"
        android:layout_width="105dp"
        android:layout_height="111dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackground1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackground1"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackground1"
        app:layout_constraintVertical_bias="0.506"
        app:srcCompat="@drawable/delivery" />

    <TextView
        android:id="@+id/textViewRecup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:text="Récupérer"
        android:textColor="#009CE4"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAdd1"
        app:layout_constraintStart_toStartOf="@+id/imageViewAdd1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAdd1" />

    <ImageView
        android:id="@+id/imageViewAdd1"
        android:layout_width="39dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackground1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackground1"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/imageViewPackIcon1"
        app:layout_constraintTop_toBottomOf="@+id/textViewETA1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/plus" />


    <ImageView
        android:id="@+id/imageViewMap1"
        android:layout_width="39dp"
        android:layout_height="42dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAdd1"
        app:layout_constraintEnd_toStartOf="@+id/imageViewAdd1"
        app:layout_constraintTop_toTopOf="@+id/imageViewAdd1"
        app:srcCompat="@drawable/map" />

    <TextView
        android:id="@+id/textViewPath1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Itinéraire"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageViewMap1"
        app:layout_constraintStart_toStartOf="@+id/imageViewMap1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMap1" />

</androidx.constraintlayout.widget.ConstraintLayout>